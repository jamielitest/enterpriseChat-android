<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f0eb"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/common_top_bar_blue" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rl_fresh"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/title_layout1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/contact_tab_bg" >

                    <!-- android:background="@drawable/list_item_background" -->

                    <TextView
                        android:id="@+id/title1"
                        style="@style/contact_title_text_style"
                        android:text="联系人"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/iv_line1"
                        style="@style/contact_title_jianjiao_style" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/title_layout2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/contact_tab_bg" >

                    <!-- android:background="@drawable/list_item_background" -->

                    <TextView
                        android:id="@+id/title2"
                        style="@style/contact_title_text_style"
                        android:text="部门" />

                    <ImageView
                        android:id="@+id/iv_line2"
                        style="@style/contact_title_jianjiao_style"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/title_layout3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/contact_tab_bg" >

                    <!-- android:background="@drawable/list_item_background" -->

                    <TextView
                        android:id="@+id/title3"
                        style="@style/contact_title_text_style"
                        android:text="工作组" />

                    <ImageView
                        android:id="@+id/iv_line3"
                        style="@style/contact_title_jianjiao_style"
                        android:visibility="invisible" />
                </RelativeLayout>

                <!-- <RelativeLayout -->
                <!-- android:id="@+id/title_layout4" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="fill_parent" -->
                <!-- android:layout_weight="1" -->
                <!-- android:background="@drawable/contact_tab_bg" > -->


                <!-- android:background="@drawable/list_item_background" -->


                <!-- <TextView -->
                <!-- android:id="@+id/title4" -->
                <!-- style="@style/contact_title_text_style" -->
                <!-- android:text="@string/button_bookmark" /> -->
                <!-- </RelativeLayout> -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.8dp"
                android:layout_weight="0"
                android:background="@drawable/contacts_title_long_line" >

                <ImageView
                    android:id="@id/iv_line1"
                    style="@style/main_title_select_line_style"
                    android:visibility="visible" />

                <ImageView
                    android:id="@id/iv_line2"
                    style="@style/main_title_select_line_style"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@id/iv_line3"
                    style="@style/main_title_select_line_style"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_fresh"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/contact_tab_bg"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_refresh_selector"
                android:visibility="gone"
                android:clickable="false"
                android:scaleType="centerInside" />

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.easemob.chatuidemo.activity.contact.widget.MyViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>